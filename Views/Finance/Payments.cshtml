@model IEnumerable<ISDN.Models.Payment>

@{
    ViewData["Title"] = "Payments";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="fas fa-credit-card"></i> Payments</h2>
            <p class="text-muted">View and manage all payment transactions</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Payment ID</th>
                                        <th>Order ID</th>
                                        <th>Customer</th>
                                        <th>Amount</th>
                                        <th>Method</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in Model)
                                    {
                                        <tr>
                                            <td>@payment.PaymentId</td>
                                            <td>@payment.OrderId</td>
                                            <td>@payment.Order?.User?.FullName</td>
                                            <td>$@payment.Amount.ToString("N2")</td>
                                            <td>@payment.PaymentMethod</td>
                                            <td>
                                                @if (payment.PaymentStatus == "Completed")
                                                {
                                                    <span class="badge bg-success">@payment.PaymentStatus</span>
                                                }
                                                else if (payment.PaymentStatus == "Pending")
                                                {
                                                    <span class="badge bg-warning">@payment.PaymentStatus</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">@payment.PaymentStatus</span>
                                                }
                                            </td>
                                            <td>@payment.CreatedAt.ToString("yyyy-MM-dd")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted py-5">No payments found</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
