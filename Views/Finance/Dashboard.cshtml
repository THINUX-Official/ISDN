@{
    ViewData["Title"] = "Finance Dashboard";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="fas fa-money-bill-wave"></i> Finance Dashboard</h2>
            <p class="text-muted">View all Payments, Generate Invoice and Financial Reports</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center border-success">
                <div class="card-body">
                    <i class="fas fa-dollar-sign fa-3x text-success mb-3"></i>
                    @* <h3>$@ViewBag.TotalRevenue?.ToString("N2")</h3> *@
                    <h3>244700.00</h3>
                    <p class="text-muted">Total Revenue</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <i class="fas fa-clock fa-3x text-warning mb-3"></i>
                    <h3>@ViewBag.PendingPayments</h3>
                    <p class="text-muted">Pending Payments</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-info">
                <div class="card-body">
                    <i class="fas fa-file-invoice fa-3x text-info mb-3"></i>
                    <h3>0</h3>
                    <p class="text-muted">Invoices Today</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-tasks"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <a asp-action="Payments" class="btn btn-outline-primary w-100 mb-2">
                        <i class="fas fa-credit-card"></i> View All Payments
                    </a>
                    <a href="#" class="btn btn-outline-success w-100 mb-2">
                        <i class="fas fa-file-invoice-dollar"></i> Generate Invoice
                    </a>
                    <a href="#" class="btn btn-outline-info w-100 mb-2">
                        <i class="fas fa-chart-line"></i> Financial Reports
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
