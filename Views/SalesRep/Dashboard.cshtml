@{
    ViewData["Title"] = "Sales Representative Dashboard";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="fas fa-user-tie"></i> Sales Representative Dashboard</h2>
            <p class="text-muted">Create new Orders, View all Orders and View Customers</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <i class="fas fa-shopping-cart fa-3x text-primary mb-3"></i>
                    @* <h3>@ViewBag.TotalOrders</h3> *@
                    <h3>3</h3>
                    <p class="text-muted">Total Orders</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-success">
                <div class="card-body">
                    <i class="fas fa-calendar-day fa-3x text-success mb-3"></i>
                    <h3>@ViewBag.TodayOrders</h3>
                    <p class="text-muted">Orders Today</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-info">
                <div class="card-body">
                    <i class="fas fa-dollar-sign fa-3x text-info mb-3"></i>
                    <h3>0</h3>
                    <p class="text-muted">Sales Today</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-tasks"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <a href="#" class="btn btn-outline-primary w-100 mb-2">
                        <i class="fas fa-plus-circle"></i> Create New Order
                    </a>
                    <a asp-action="Orders" class="btn btn-outline-success w-100 mb-2">
                        <i class="fas fa-list"></i> View All Orders
                    </a>
                    <a href="#" class="btn btn-outline-info w-100 mb-2">
                        <i class="fas fa-users"></i> View Customers
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
