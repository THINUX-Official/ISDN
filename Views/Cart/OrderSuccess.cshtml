@model ISDN.Models.Order

@{
    ViewData["Title"] = "Order Success";
}

<div class="container mt-5 text-center">
    <div class="card border-success mb-3 shadow-lg" style="max-width: 600px; margin: 0 auto;">
        <div class="card-header bg-success text-white">
            <h2>Order Placed Successfully!</h2>
        </div>
        <div class="card-body text-success">
            <h5 class="card-title display-4"><i class="bi bi-check-circle-fill"></i></h5>
            <p class="card-text lead">Thank you for your purchase.</p>
            <p>Your order number is: <strong>@Model?.OrderNumber</strong></p>
            <p>Date: @Model?.OrderDate.ToLocalTime()</p>
            <hr />
            <p>We will process your order shortly.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary mt-3">Continue Shopping</a>
        </div>
    </div>
</div>