@model IEnumerable<ISDN.Models.Order>

@{
    ViewData["Title"] = "Schedule Delivery";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="fas fa-calendar-plus"></i> Schedule Delivery</h2>
            <p class="text-muted">Schedule deliveries for confirmed orders</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Customer</th>
                                        <th>Order Date</th>
                                        <th>Total Amount</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td>@order.OrderId</td>
                                            <td>@order.User?.FullName</td>
                                            <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                                            <td>$@order.TotalAmount.ToString("N2")</td>
                                            <td><span class="badge bg-warning">@order.Status</span></td>
                                            <td>
                                                <a href="#" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-calendar-check"></i> Schedule
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted py-5">No pending orders to schedule</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
