@{
    ViewData["Title"] = "Logistics Dashboard";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="fas fa-truck"></i> Logistics Dashboard</h2>
            <p class="text-muted">View all Deliveries, Shedule Deliveries, and Track Shipments</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <i class="fas fa-shipping-fast fa-3x text-primary mb-3"></i>
                    <h3>2</h3>
                    <p class="text-muted">Active Deliveries</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-info">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-info mb-3"></i>
                    <h3>6</h3>
                    <p class="text-muted">Active Drivers</p>
                </div>
            </div>
        </div>      
        <div class="col-md-3">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <i class="fas fa-clock fa-3x text-warning mb-3"></i>
                    <h3>2</h3>
                    <p class="text-muted">Pending Schedule</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-success">
                <div class="card-body">
                    <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                    <h3>1</h3>
                    <p class="text-muted">Completed Today</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-tasks"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <a asp-action="Deliveries" class="btn btn-outline-primary w-100 mb-2">
                        <i class="fas fa-truck"></i> View All Deliveries
                    </a>
                    <a asp-action="Schedule" class="btn btn-outline-success w-100 mb-2">
                        <i class="fas fa-calendar-plus"></i> Schedule Delivery
                    </a>
                    <a href="#" class="btn btn-outline-info w-100 mb-2">
                        <i class="fas fa-map-marked-alt"></i> Track Shipments
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
