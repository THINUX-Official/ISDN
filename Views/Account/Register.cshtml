@model ISDN.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-container">
    <div class="auth-wrapper">
        <div class="auth-card">
            <div class="auth-header">
                <h1 class="auth-title">Create Account</h1>
                <p class="auth-subtitle">Register for access to the ISDN system</p>
            </div>

            <form asp-action="Register" asp-controller="Account" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group-modern">
                    <label asp-for="FullName" class="form-label-modern">Full Name</label>
                    <input asp-for="FullName" 
                           class="form-control-modern" 
                           type="text"
                           autocomplete="name"
                           placeholder="John Doe" 
                           autofocus />
                    <span asp-validation-for="FullName" class="form-error"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Email" class="form-label-modern">Email Address</label>
                    <input asp-for="Email" 
                           class="form-control-modern" 
                           type="email"
                           autocomplete="username"
                           placeholder="you@company.com" />
                    <span asp-validation-for="Email" class="form-error"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Password" class="form-label-modern">Password</label>
                    <div class="password-input-wrapper">
                        <input asp-for="Password" 
                               id="registerPassword"
                               class="form-control-modern" 
                               type="password"
                               autocomplete="new-password"
                               placeholder="Create a strong password" />
                        <button type="button" class="password-toggle-btn" onclick="togglePassword('registerPassword', this)" aria-label="Toggle password visibility">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="form-error"></span>
                    <small class="form-hint">
                        Minimum 6 characters with uppercase, lowercase, number, and special character
                    </small>
                </div>

                <div class="form-group-modern">
                    <label asp-for="ConfirmPassword" class="form-label-modern">Confirm Password</label>
                    <div class="password-input-wrapper">
                        <input asp-for="ConfirmPassword" 
                               id="confirmPassword"
                               class="form-control-modern" 
                               type="password"
                               autocomplete="new-password"
                               placeholder="Re-enter your password" />
                        <button type="button" class="password-toggle-btn" onclick="togglePassword('confirmPassword', this)" aria-label="Toggle password visibility">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="form-error"></span>
                </div>

                <button type="submit" class="btn-primary-modern">
                    Create Account
                </button>
            </form>

            <div class="auth-footer">
                <p class="auth-footer-text">
                    Already have an account? 
                    <a asp-action="Login" asp-controller="Account" class="auth-link">Sign in</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Password visibility toggle function
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
                button.setAttribute('aria-label', 'Hide password');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
                button.setAttribute('aria-label', 'Show password');
            }
        }
    </script>
}

<style>
