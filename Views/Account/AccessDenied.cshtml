@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-ban"></i> Access Denied
                    </h3>
                </div>
                <div class="card-body text-center p-5">
                    <i class="fas fa-exclamation-triangle fa-5x text-danger mb-4"></i>
                    <h4 class="mb-3">You do not have permission to access this resource.</h4>
                    <p class="text-muted mb-4">
                        This area is restricted to authorized users only. 
                        Please contact your system administrator if you believe you should have access.
                    </p>
                    <div class="d-grid gap-2 d-md-block">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home"></i> Go to Home
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt"></i> Login with Different Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
