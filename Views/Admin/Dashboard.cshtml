@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold"><i class="bi bi-shield-lock-fill me-2"></i>Admin Dashboard</h2>
            <p class="text-muted">Manage users, roles, permissions, and view system audit logs</p>
        </div>
        <!-- Date/Time could go here -->
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <!-- Total Users -->
        <div class="col-md-3">
            <div class="card h-100 text-center p-3 border-primary shadow-sm">
                <div class="card-body">
                    <div class="display-4 text-primary mb-2">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <h2 class="fw-bold">@ViewBag.TotalUsers</h2>
                    <p class="text-muted small">Total Users</p>
                </div>
            </div>
        </div>

        <!-- System Status -->
        <div class="col-md-3">
            <div class="card h-100 text-center p-3 border-success shadow-sm">
                <div class="card-body">
                    <div class="display-4 text-success mb-2">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <h2 class="fw-bold">@ViewBag.SystemStatus</h2>
                    <p class="text-muted small">System Status</p>
                </div>
            </div>
        </div>

        <!-- Recent Logs -->
        <div class="col-md-3">
            <div class="card h-100 text-center p-3 border-warning shadow-sm">
                <div class="card-body">
                    <div class="display-4 text-warning mb-2">
                        <i class="bi bi-clipboard-data"></i>
                    </div>
                    <h2 class="fw-bold">@ViewBag.RecentLogsCount</h2>
                    <p class="text-muted small">Recent Logs</p>
                </div>
            </div>
        </div>

        <!-- User Roles -->
        <div class="col-md-3">
            <div class="card h-100 text-center p-3 border-info shadow-sm">
                <div class="card-body">
                    <div class="display-4 text-info mb-2">
                        <i class="bi bi-person-gear"></i>
                    </div>
                    <h2 class="fw-bold">@ViewBag.UserRolesCount</h2>
                    <p class="text-muted small">User Roles</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Quick Actions -->
        <div class="col-md-5">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white fw-bold">
                    <i class="bi bi-list-task me-2"></i>Quick Actions
                </div>
                <div class="card-body d-grid gap-3 p-4">
                    <a href="#" class="btn btn-outline-primary py-2"><i class="bi bi-people me-2"></i>Manage Users</a>
                    <a href="#" class="btn btn-outline-warning py-2 text-dark"><i
                            class="bi bi-journal-text me-2"></i>View Audit Logs</a>
                    <a href="#" class="btn btn-outline-info py-2 text-dark"><i
                            class="bi bi-person-badge me-2"></i>Manage Roles & Permissions</a>
                    <a asp-controller="Products" asp-action="Manage" class="btn btn-outline-success py-2"><i
                            class="bi bi-box-seam me-2"></i>Manage Products</a>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-md-7">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-warning text-dark fw-bold">
                    <i class="bi bi-clock-history me-2"></i>Recent Activity
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var activity in ViewBag.RecentActivity)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1 fw-bold text-primary">@activity.Action</h6>
                                    <small class="text-muted">@activity.Timestamp.ToString("yyyy-MM-dd HH:mm")</small>
                                </div>
                                <p class="mb-1 small">@activity.Description</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>