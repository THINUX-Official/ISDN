@model ISDN.ViewModels.AssignRoleViewModel

@{
    ViewData["Title"] = "Assign Role";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user-tag"></i> Assign Role to User</h4>
                </div>
                <div class="card-body">
                    <form asp-action="AssignRole" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UserId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">User Information</label>
                            <div class="card bg-light">
                                <div class="card-body">
                                    <p class="mb-1"><strong>Name:</strong> @Model.FullName</p>
                                    <p class="mb-1"><strong>Email:</strong> @Model.Email</p>
                                    <p class="mb-0"><strong>Current Role:</strong> 
                                        <span class="badge bg-info">@Model.CurrentRole</span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="SelectedRole" class="form-label fw-bold">
                                Select New Role <span class="text-danger">*</span>
                            </label>
                            <select asp-for="SelectedRole" class="form-select">
                                <option value="">-- Select Role --</option>
                                @foreach (var role in Model.AvailableRoles)
                                {
                                    <option value="@role" selected="@(role == Model.CurrentRole)">@role</option>
                                }
                            </select>
                            <span asp-validation-for="SelectedRole" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle"></i> Select the role you want to assign to this user
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Warning:</strong> Changing user roles will affect their access permissions immediately.
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="UserManagement" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
