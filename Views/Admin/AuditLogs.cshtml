@model IEnumerable<ISDN.Models.AuditLog>

@{
    ViewData["Title"] = "Audit Logs";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="fas fa-clipboard-list"></i> Audit Logs</h2>
            <p class="text-muted">Complete system activity audit trail</p>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="fas fa-history"></i> Recent System Activities</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-sm">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Date & Time</th>
                            <th>User</th>
                            <th>Action</th>
                            <th>Entity</th>
                            <th>Description</th>
                            <th>IP Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>@log.AuditId</td>
                                <td>@log.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>
                                    @if (log.User != null)
                                    {
                                        <span title="@log.User.Email">@log.User.FullName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">System</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@GetActionBadgeClass(log.Action)">
                                        @log.Action
                                    </span>
                                </td>
                                <td>@(log.EntityType ?? "N/A")</td>
                                <td>@log.Description</td>
                                <td><small>@(log.IpAddress ?? "N/A")</small></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No audit logs found.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

@functions {
    string GetActionBadgeClass(string action)
    {
        return action.ToUpper() switch
        {
            var a when a.Contains("LOGIN") && a.Contains("SUCCESS") => "success",
            var a when a.Contains("LOGIN") && a.Contains("FAILED") => "danger",
            var a when a.Contains("LOGOUT") => "secondary",
            var a when a.Contains("CREATED") || a.Contains("REGISTERED") => "primary",
            var a when a.Contains("UPDATED") || a.Contains("CHANGED") => "info",
            var a when a.Contains("DELETED") || a.Contains("DEACTIVATED") => "warning",
            _ => "secondary"
        };
    }
}
